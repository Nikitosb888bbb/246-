import math
def  calculate_rectangle_area(width, height):
    # вычисление площади прямоугольника
    return width * height
def calculate_triangle_area(radius):
    # вычисление площади круга
    return 2 * math.pi * radius
def main():
    print('Калькулятор площади')
    width, height = map(float, input('Введите ширину и высоту прямоугольника (x x): ').split())
    rect_area=calculate_rectangle_area(width, height)
    print(f'Площадь прямоугольника: {rect_area:.2f}')
    print('=Калькулятор радиуса=')
    radius = float(input('Введите радиус круга: '))
    cicle_area=calculate_triangle_area(radius)
    print(f'Площадь круга: {cicle_area:.2f}')
if __name__ == '__main__':
    main()
