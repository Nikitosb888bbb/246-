import math
def calculate_distance(x1, y1, x2, y2):
    return math.sqrt((x2-x1)**2 + (y2-y1)**2)
def calculate_triangle_area(a, b, c):
    s=(a + b + c)/2
    area = math.sqrt(s*(s-a)*(s-b)*(s-c))
    return area
def main():
    print ('Введите координаты трех вершин треугольника:')
    x1,y1=map(float,input('Введите координаты точки А (x1,y1):').split())
    x2,y2=map(float,input('Введити координаты точки B (x2,y2):').split())
    x3,y3=map(float,input('Введите координаты точки C (x3,y3):').split())
    a=calculate_distance(x1,y1,x2,y2)
    b=calculate_distance(x2,y2,x3,y3)
    c=calculate_distance(x3,y3,x1,y1)
    area=calculate_triangle_area(a,b,c)
    print(f'Стороны треугольника: a={a:.2f}, b={b:.2f}, c={c:.2f}')
    print(f'Площадь треугольника: {area:.2f}')
if __name__ == '__main__':
    main()
